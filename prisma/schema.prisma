// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  password      String
  name          String?
  role          UserRole        @default(PATIENT)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  // Relations
  responses     UserResponse[]
  hintUsage     HintUsage[]
  analysisReports AnalysisReport[]
  preVisitForms PreVisitForm[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Question {
  id              String          @id @default(cuid())
  category        String
  questionText    String          @db.Text
  patientContext  String          @db.Text
  patientName     String
  patientAge      Int?
  difficultyLevel DifficultyLevel @default(INTERMEDIATE)
  hintText        String          @db.Text
  isActive        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  
  // Relations
  answerOptions   AnswerOption[]
  responses       UserResponse[]
  hintUsage       HintUsage[]

  @@map("questions")
}

model AnswerOption {
  id                      String   @id @default(cuid())
  questionId              String
  optionText              String   @db.Text
  isCorrect               Boolean
  explanation             String   @db.Text
  educationalResourceLink String?
  
  // Relations
  question                Question       @relation(fields: [questionId], references: [id], onDelete: Cascade)
  responses               UserResponse[]

  @@map("answer_options")
}

model UserResponse {
  id               String       @id @default(cuid())
  userId           String
  questionId       String
  selectedOptionId String
  isCorrect        Boolean
  timeSpentSeconds Int
  usedHint         Boolean      @default(false)
  sessionId        String
  timestamp        DateTime     @default(now())
  
  // Relations
  user             User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  question         Question     @relation(fields: [questionId], references: [id], onDelete: Cascade)
  selectedOption   AnswerOption @relation(fields: [selectedOptionId], references: [id], onDelete: Cascade)

  @@map("user_responses")
}

model HintUsage {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  sessionId  String
  timestamp  DateTime @default(now())
  
  // Relations
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@map("hint_usage")
}

model AnalysisReport {
  id               String   @id @default(cuid())
  userId           String
  sessionId        String
  analysisText     String   @db.Text
  knowledgeGaps    Json
  recommendations  Json
  confidenceScores Json
  createdAt        DateTime @default(now())
  
  // Relations
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("analysis_reports")
}

model PreVisitForm {
  id          String   @id @default(cuid())
  userId      String
  symptoms    Json
  medications Json
  concerns    Json
  completedAt DateTime @default(now())
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("pre_visit_forms")
}

enum UserRole {
  PATIENT
  PHYSICIAN
  ADMIN
}

enum DifficultyLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

